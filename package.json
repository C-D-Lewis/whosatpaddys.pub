{
  "name": "whosatpaddys.pub",
  "version": "1.0.0",
  "description": "Scripts and data for episodes of IASIP",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:dev": "npm run clean && webpack --mode development",
    "build": "npm run clean && webpack --mode production",
    "start": "npm run build:dev && http-server"
  },
  "author": "Chris Lewis",
  "license": "Apache-2.0",
  "dependencies": {
    "fabricate.js": "^2.9.0",
    "neat-csv": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "@chris-lewis/eslint-config",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "rules": {
      "import/extensions": 0,
      "no-param-reassign": 0
    }
  },
  "devDependencies": {
    "@chris-lewis/eslint-config": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  }
}
