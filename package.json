{
  "name": "whosatpaddys.pub",
  "version": "1.0.0",
  "description": "Scripts and data for episodes of IASIP",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:episodes": "node scripts/parse-csv.js",
    "setup": "npm run clean && npm run build:episodes",
    "build:dev": "npm run setup && webpack --mode development",
    "build": "npm run setup && webpack --mode production",
    "start": "npm run build:dev && http-server"
  },
  "author": "Chris Lewis",
  "license": "Apache-2.0",
  "dependencies": {
    "@chris-lewis/eslint-config": "^1.0.3",
    "neat-csv": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "@chris-lewis/eslint-config"
    ],
    "globals": {
      "fabricate": "readonly",
      "Theme": "readonly",
      "Utils": "readonly"
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "devDependencies": {
    "fabricate.js": "^2.4.1",
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  }
}
